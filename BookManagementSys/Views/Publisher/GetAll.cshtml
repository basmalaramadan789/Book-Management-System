@model IEnumerable<BookManagementSys.Models.Domain.Publisher>

@{
}

<div class="container pt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="text-center">
                <a class="btn btn-dark" href="/Publisher/Add">Add More</a>
            </div>
            <div class="text-center mt-3">
                <h3>Publishers</h3>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PublisherName</td>
                                <td>
                                    <a class="btn btn-success" href="/Publisher/Update?id=@item.Id">Edit</a>
                                    <a class="btn btn-danger" onclick="return window.confirm('Are you sure ?')" href="/Publisher/Delete?id=@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>