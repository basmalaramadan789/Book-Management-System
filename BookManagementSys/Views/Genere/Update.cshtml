@model BookManagementSys.Models.Domain.Genere
@{

}
<div class="container" pt-5>
    <div class="row">
        <div class="col-md-6">
            <h3> Update Genere</h3>
            <form asp-action="Update" method="post">
                <input hidden asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="GenreName">Name *</label>
                    <input type="text" class="form-control" asp-for="GenreName" />
                    <span asp-validation-for="GenreName" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">save</button>
                    <a href="/Genere/GetAll" class="btn btn-primary">List</a>
                </div>

            </form>
        </div>
    </div>

</div>

